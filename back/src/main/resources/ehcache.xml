<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            maxElementsInMemory="10000"
            eternal="false"
            overflowToDisk="true"
            timeToIdleSeconds="10"
            timeToLiveSeconds="120"
            diskPersistent="false"
            memoryStoreEvictionPolicy="LRU"
            diskExpiryThreadIntervalSeconds="120"/>

    <!-- ================= jsets-security-shiro相关缓存配置  ====================-->
    <!-- 属性说明-->
    <!-- name:cache的名称，必须是唯一的-->
    <!-- maxEntriesLocalHeap:内存中保持的对象数量 -->
    <!-- overflowToDisk:缓存数据数量超过maxElementsInMemory限制后是否缓存到磁盘上，这里设为true确保数据不丢失 -->
    <!-- eternal:是否是永恒数据，这里设为true确保数据不丢失，清扫任务交由程序逻辑 -->
    <!-- statistics:开启命中统计 -->

    <!-- 活跃的SESSION缓存 -->
    <cache name="__activeSessionCache__"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="true"
           statistics="true">
    </cache>
    <!-- 密码重试次数缓存 -->
    <cache name="shiro-passwordRetryCache"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="true"
           statistics="true">
    </cache>
    <!-- 保持账号唯一用户登陆缓存 -->
    <cache name="__keepOneUserCache__"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="true"
           statistics="true">
    </cache>
    <!-- 认证数据缓存 ，最后一次访问后一小时失效 -->
    <cache name="__authenticationCache__"
           maxEntriesLocalHeap="2000"
           overflowToDisk="false"
           eternal="false"
           timeToIdleSeconds="3600"
           statistics="true">
    </cache>
    <!-- 授权数据缓存  ，最后一次访问后一小时失效-->
    <cache name="__authorizationCache__"
           maxEntriesLocalHeap="2000"
           overflowToDisk="false"
           eternal="false"
           timeToIdleSeconds="3600"
           statistics="true">
    </cache>
    <!-- 已使用过的令牌缓存 ，仅存活一小时-->
    <cache name="shiro-tokenBurnersCache"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="false"
           timeToLiveSeconds="3600"
           statistics="true">
    </cache>
    <!-- 系统参数缓存 -->
    <cache name="ParameterService"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="false"
           timeToLiveSeconds="3600"
           statistics="true">
    </cache>
    <!-- 系统字典缓存 -->
    <cache name="DictionaryService"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="false"
           timeToLiveSeconds="3600"
           statistics="true">
    </cache>
    <!-- 系统角色缓存 -->
    <cache name="RoleService"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="false"
           timeToLiveSeconds="3600"
           statistics="true">
    </cache>
    <!-- 系统角色缓存 -->
    <cache name="UserIRolePermissionCacheService"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="false"
           timeToLiveSeconds="3600"
           statistics="true">
    </cache>
    <!-- 系统部门缓存 -->
    <cache name="IDepartmentService"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="false"
           timeToLiveSeconds="3600"
           statistics="true">
    </cache>
    <!-- 系统权限缓存 -->
    <cache name="PermissionService"
           maxEntriesLocalHeap="2000"
           overflowToDisk="true"
           eternal="false"
           timeToLiveSeconds="3600"
           statistics="true">
    </cache>

</ehcache>